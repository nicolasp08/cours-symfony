{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
        <div class="bg-light py-3 px-3">
        <h1>CONNEXION</h1>

        {% if hasError %}
        
        <div class="alert alert-danger">Une erreur est survenue, merci de v√©rifier vos informations</div>
        {% endif %}
<form action="{{ path('account_login') }}" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="_username" id="email" class="form-control" placeholder="mail" required value={{username}}>
    </div>
    <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Connexion</button>
    </div>
</form>
</div>
</div>
</div>
</div>
{% endblock %}
