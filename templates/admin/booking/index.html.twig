{% extends "admin/base.html.twig" %}

{% block title %}
    Gestion des Réservations
{% endblock %}

{% block body %}
    
<div class="container-fluid">
    <h1 class="my-5">Gestion des Réservations</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Durée</th>
                <th>Prix</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for booking in bookings %}
                
            
            <tr>
                <td>{{booking.id}}</td>
               
                <td><img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micro"> {{ booking.booker.fullName}}</td>
                 <td>{{booking.createdAt|date('d/m/Y H:i')}}</td>
                <td>{{booking.ad.title}}</span></td>
                <td>{{booking.duration}}</span></td>
                <td>{{booking.amount}} &euro; </span></td>
                <td><a href="{{ path('admin_booking_edit', {'id': booking.id})}}" class="btn-btn-primary"><i class="fas fa-edit"></i></a>
            <a href="{{ path('admin_booking_delete', {'id': booking.id})}}" class="btn-btn-danger"><i class="fas fa-trash"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock  %}